<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginBottom="16dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageview_cover_art"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:contentDescription="@string/image_description" />


    </FrameLayout>

    <TextView
        android:id="@+id/textview_movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/movie_name"
        tools:text="@string/app_name"
        android:textStyle="bold"
        android:paddingTop="@dimen/movie_name_padding_top"
        android:paddingLeft="@dimen/zero"
        android:paddingStart="@dimen/zero"
        android:paddingRight="@dimen/movie_name_padding_Right"

        android:paddingBottom="@dimen/movie_name_padding_Bottom"
        android:gravity="center_horizontal" />


</LinearLayout>